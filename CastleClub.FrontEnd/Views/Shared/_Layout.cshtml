@{
    CastleClub.DataTypes.SiteDT site = ((CastleClub.DataTypes.SiteDT)ViewBag.Site);
    site = site ?? CastleClub.BusinessLogic.Managers.SitesManager.GetSiteFromHostname(Request.Url.Host);
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@site.Name - @site.Subtitle</title>
        @if (site.SignUpFormat == "NEW")
        {
            @Html.Raw("<link href=\"Content/Offer" + @site.Id + "/salesmain.css\" rel=\"stylesheet\" type=\"text/css\" />");
        }
        else
        {
            @Html.Raw("<link href=\"/style.css\" rel=\"stylesheet\" type=\"text/css\" />");
        }

    <script src="/Content/js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/Content/js/common.js" type="text/javascript"></script>

    <!-- Greybox JS START -->
    <script type="text/javascript">
        var GB_ROOT_DIR = "/Content/js/greybox/";
    </script>
    <script type="text/javascript" src="/Content/js/greybox/AJS.js"></script>
    <script type="text/javascript" src="/Content/js/greybox/AJS_fx.js"></script>
    <script type="text/javascript" src="/Content/js/greybox/gb_scripts.js"></script>
    <link href="/Content/js/greybox/gb_styles.css" rel="stylesheet" type="text/css" />
    <!-- Greybox JS END -->
</head>
<body>
    <!-- CONTENTS START -->
        <div id="outercontainer">
            @RenderBody()
            <div id="footer">
                <span class="grey">
                    &copy; Copyright @DateTime.Now.Year Castle Club Rewards, LLC, All Rights Reserved<br>
                @site.Name membership offer is only available to residents of the  United States.
            </span><br>
            Use of this website is subject to the “<a href="/salesterms" class="mainlink" rel="gb_page_center[450, 450]" title="@site.Name Terms &amp; Conditions">Terms and  Conditions</a>” and “<a href="/salesprivacy" class="mainlink" rel="gb_page_center[450, 450]" title="@site.Name Privacy Policy">Privacy Policy”</a> sections, which may be reviewed by clicking the links identified above.
        </div>
    </div>
    <!-- CONTENTS END -->
</body>
</html>